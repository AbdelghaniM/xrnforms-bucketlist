<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XrnCourse.BucketList.Views.SettingsView"
             Title="Settings">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="btnSaveSettings_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <TableView>
        <TableRoot>
            <TableSection Title="User settings">
                <EntryCell x:Name="txtUserName" Placeholder="Enter your username" Label="Username" Keyboard="Text" />
                <EntryCell x:Name="txtEmail" Placeholder="Enter your e-mail" Label="E-mail" Keyboard="Email" />
            </TableSection>
            <TableSection Title="General settings">
                <SwitchCell x:Name="swEnableListSharing" Text="Enable List sharing" On="true" />
                <SwitchCell x:Name="swEnableNotifications" Text="Enable notifications" On="true" />
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>